{
    "editor.autoSurround": "never",
    "workbench.editor.enablePreview": false,
    "ruby.intellisense": "rubyLocate",
    "window.title": "${dirty}${activeEditorMedium}${separator}${remoteName}${rootName}",
    "editor.rulers": [
        120
    ],
    "editor.tabSize": 2,
    "editor.renderLineHighlight": "all",
    "editor.matchBrackets": "never",
    "files.autoSave": "afterDelay",
    "yaml.schemas": {
      "file:///Users/knog/.vscode/extensions/atlassian.atlascode-3.0.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "diffEditor.wordWrap": "off",
    "gitlens.views.lineHistory.enabled": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "liveshare.authenticationProvider": "GitHub",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.tabs.enabled": true,
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordWrap": "off",
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 2,
    "scm.defaultViewMode": "tree",

    // vim
    "vim.insertModeKeyBindings": [
      {
          "before": ["j", "j"],
          "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindings": [
      {
        "before": ["<C-k>"],
        "after": ["g", "b"]
      },
      {
        "before": ["J"], // 効かない
        "after": ["10j"]
      },
      {
        "before": ["K"], // 効かない
        "after": ["10k"]
      },
      {
        "before": ["H"],
        "after": ["^"]
      },
      {
        "before": ["L"],
        "after": ["$"]
      },
    ],
    "vim.visualModeKeyBindings": [
      {
          "before": ["<C-k>"],
          "after": ["g", "b"]
      }
    ],
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.profiles.osx": {
      "/bin/bash (migrated)": {
        "path": "/bin/bash",
        "args": [
          "-l"
        ]
      }
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
      "zsh": {
        "path": "/bin/zsh",
        "args": [
          "-l"
        ]
      }
    },
    "workbench.editor.closeEmptyGroups": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "emmet.includeLanguages": {
      "erb": "html"
    },
    "livePreview.debugOnExternalPreview": true,
    "livePreview.previewDebounceDelay": 500,
    "livePreview.autoRefreshPreview": "On Changes to Saved Files",
    "vim.useSystemClipboard": true,
    "htmltagwrap.tag": "div",
    "dev.containers.defaultExtensions": [
      "vscodevim.vim"
    ],
    "dotfiles.repository": "https://github.com/knogsan/dotfiles",
    "dotfiles.targetPath": "~/dotfiles",
    "dotfiles.installCommand": "install.sh"
}
