{
  "dev.containers.defaultExtensions": [
    "vscodevim.vim",
    "antfu.browse-lite"
  ],
  "diffEditor.wordWrap": "off",
  "dotfiles.installCommand": "install.sh",
  "dotfiles.repository": "https://github.com/knogsan/dotfiles",
  "dotfiles.targetPath": "~/dotfiles",
  "editor.autoSurround": "never",
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.matchBrackets": "never",
  "editor.renderLineHighlight": "all",
  "editor.rulers": [
    120
  ],
  "editor.tabSize": 2,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "gitlens.views.lineHistory.enabled": true,
  "htmltagwrap.tag": "div",
  "livePreview.autoRefreshPreview": "On Changes to Saved Files",
  "livePreview.debugOnExternalPreview": true,
  "livePreview.previewDebounceDelay": 500,
  "liveshare.authenticationProvider": "GitHub",
  "ruby.intellisense": "rubyLocate",
  "scm.defaultViewMode": "tree",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/usr/bin/zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh",
      "args": ["-l"]
    }
  },
  // vim
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-k>"],
      "after": ["g", "b"]
    },
    {
      "before": ["J"], // 効かない
      "after": ["10j"]
    },
    {
      "before": ["K"], // 効かない
      "after": ["10k"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<C-k>"],
      "after": ["g", "b"]
    }
  ],
  "vim.useSystemClipboard": true,
  "window.title": "${dirty}${activeEditorMedium}${separator}${remoteName}${rootName}",
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 2,
  "yaml.schemas": {
    "file:///Users/knog/.vscode/extensions/atlassian.atlascode-3.0.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  }
}
